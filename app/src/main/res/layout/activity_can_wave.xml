<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#408cff"
    tools:context=".CanWaveActivity">

    <com.example.canwave.LightBgView
        android:layout_width="296dp"
        android:layout_height="360dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_light_bg">

        <com.example.canwave.CanLayoutView
            android:id="@+id/canLayout"
            android:layout_width="@dimen/pair_can_width"
            android:layout_height="@dimen/pair_can_layout_height"
            android:layout_centerInParent="true"/>

    </com.example.canwave.LightBgView>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:letterSpacing="0.0"
            android:text="开始"
            android:textColor="#0096ff"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvStop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:letterSpacing="0.0"
            android:text="暂停"
            android:textColor="#ec2525"
            android:textSize="16sp"/>
    </LinearLayout>

</RelativeLayout>