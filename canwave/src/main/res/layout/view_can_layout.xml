<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/pair_can_width"
                android:layout_height="@dimen/pair_can_layout_height"
                android:background="#00000000">

    <com.example.canwave.MusicNoteView
        android:id="@+id/musicNoteView"
        android:layout_width="@dimen/pair_music_note_bg_width"
        android:layout_height="@dimen/pair_music_note_bg_height"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/capView"
        android:layout_width="@dimen/pair_cap_width"
        android:layout_height="@dimen/pair_cap_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/pair_cap_margin_top"
        android:alpha="0"
        android:src="@drawable/pair_cap"/>

    <com.example.canwave.CanWaveView
        android:id="@+id/canView"
        android:layout_width="@dimen/pair_can_width"
        android:layout_height="@dimen/pair_can_height"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="@dimen/pair_can_width"
        android:layout_height="@dimen/pair_can_height"
        android:layout_alignParentBottom="true"
        android:src="@drawable/pair_can"/>

</RelativeLayout>